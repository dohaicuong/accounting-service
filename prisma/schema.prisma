datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator prisma_client {
  provider = "prisma-client-js"
}

model Ledger {
  id          String      @id @default(cuid())
  name        String
  description String
  subledgers  Subledger[]
}

model Subledger {
  id          String    @id @default(cuid())
  name        String
  description String
  accounts    Account[]
  Ledger      Ledger?   @relation(fields: [ledgerId], references: [id])
  ledgerId    String?
}

